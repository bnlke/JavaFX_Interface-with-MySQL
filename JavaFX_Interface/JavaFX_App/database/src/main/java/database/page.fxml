<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="400.0" prefWidth="590.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="database.PageController">

    <!-- MenuBar at the top -->
    <top>
        <MenuBar prefHeight="23.0" prefWidth="449.0">
            <Menu text="Students">
                <items>
                    <MenuItem fx:id="addStudentMenuItem" onAction="#handleAddStudent" text="Add Student" />
                    <!-- Other menu items -->
                </items>
                <items>
                    <MenuItem fx:id="deleteStudentMenuItem" onAction="#handleDeleteStudent" text="Delete Student" />
                    <!-- Other menu items -->
                </items>
                <items>
                    <MenuItem fx:id="changeStudentMenuItem" onAction="#handleChangeStudent" text="Change Student" />
                    <!-- Other menu items -->
                </items>
            </Menu>
            <Menu fx:id="projectsMenu" text="Projects">
                <items>
                    <MenuItem fx:id="addProjectMenuItem" onAction="#handleAddProject" text="Add Project" />
                    <!-- Other menu items -->
                </items>
                <items>
                    <MenuItem fx:id="deleteProjectMenuItem" onAction="#handleDeleteProject" text="Delete Project" />
                    <!-- Other menu items -->
                </items>
                <items>
                    <MenuItem fx:id="changeProjectMenuItem" onAction="#handleChangeProject" text="Change Project" />
                    <!-- Other menu items -->
                </items>
            </Menu>
            <Menu fx:id="enrollmentsMenu" text="Enrollments">
                <items>
                    <MenuItem fx:id="addEnrollmentMenuItem" onAction="#handleAddEnrollment" text="Add Enrollment" />
                    <!-- Other menu items -->
                </items>
                <items>
                    <MenuItem fx:id="deleteEnrollmentMenuItem" onAction="#handleDeleteEnrollment" text="Delete Enrollment" />
                    <!-- Other menu items -->
                </items>
                <items>
                    <MenuItem fx:id="changeEnrollmentMenuItem" onAction="#handleChangeEnrollment" text="Change Enrollment" />
                    <!-- Other menu items -->
                </items>
            </Menu>
        </MenuBar>
    </top>

    <!-- Your existing content (HBox, etc.) -->
    <center>
        <StackPane>
            <ListView fx:id="studentsListView" prefHeight="274.0" prefWidth="505.0" />
            <!-- Your existing content, adjust as needed -->
        </StackPane>
    </center>
</BorderPane>
